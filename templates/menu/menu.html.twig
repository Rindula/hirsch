<turbo-frame id="dailyFood">
{% for i,menu in menus %}
    <div data-role="card" class='foodcard'>
        <h2 data-role="title">Tagesessen f√ºr den {{menu.date|format_datetime('short', 'none', locale='de')}}</h2>

        <span data-role="gericht">{{menu.gericht}}</span>

        <div data-role="actionbar" class='actionbar'>
