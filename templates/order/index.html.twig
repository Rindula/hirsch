{% extends 'base.html.twig' %}
{% block metas %}
    <meta name="turbo-cache-control" content="no-preview">
    <link rel="prefetch" href="{{ path('paynow') }}">
{% endblock %}

{% block title %}Bestellen{% endblock %}

{% block body %}
    <h2>{{meal.name}}</h2>
    <small>Bestellung für den {{order_date|format_datetime('long', 'none', locale='de')}}</small>
    {{form(form)}}
    <datalist id="wishlist">
        <option value="+ Pommes"></option>
        <option value="+ Senf"></option>
        <option value="+ Mayonnaise"></option>
        <option value="+ Ketchup"></option>
        <option value="Extra Soße"></option>
    </datalist>
{% endblock %}
